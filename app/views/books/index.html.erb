<p id="notice"></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <%= link_to 'Show', book_path(book.id), class: 'show_53857' %>
      </td>
      <td>
        <%= link_to 'Edit', edit_book_path(book.id), class: 'edit_53857' %>
      <td>
        <%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?", class: 'destroy_53857' %>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>
<div class="field">
  <!--<label for="book_title">Title</label>-->
  <%= f.label :title, 'Title' %>
  <%= f.text_field :title, class: 'book_title', id: 'book_title' %>
</div>
<div class="field">
  <%= f.label :body, 'Body' %>
  <%= f.text_area :body, class: 'book_body', id: 'book_body' %>
</div>
<div class="actions">
  <%= f.submit 'Create Book' %>
</div>
<% end %>
